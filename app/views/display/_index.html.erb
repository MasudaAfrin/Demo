<div class = "list">
  <h1>All Posts</h1>
  <table>
    <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    </tr>
    </thead>
    <% blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= link_to image_tag(blog.image), blog_path(blog), remote: true %></td>
      </tr>
    <% end %>
  </table>
</div>
