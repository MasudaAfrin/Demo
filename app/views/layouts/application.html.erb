<!DOCTYPE html>
<html>
  <head>
    <title>Cooking Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class= "main">
    <%= image_tag 'cooking.svg', alt:'Cooking Blog' %>
    <h1><%= @page_title %></h1>
  </header>

  <section class="content">
    <!--side nav-->
    <nav class = "side_nav">
    <ul>
      <li><a href="/">Home</a></li>
      <li><%= link_to 'login', login_path %></li>
    </ul>
      <!--if admin login dashboard-->
      <% if session[:user_id] %>
        <nav class="logged_in_nav">
          <ul>
            <li><%= link_to 'blogs', blogs_path %></li>
            <li><%= link_to 'Create Blog', new_blog_path, remote: true %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= button_to 'Logout', logout_path, method: :delete %></li>
          </ul>
        </nav>
      <% end %>
    </nav>

    <%# call for controller  %>
    <main class='<%= controller.controller_name %>'>
      <%= yield %>
    </main>
  </section>

  </body>
</html>
