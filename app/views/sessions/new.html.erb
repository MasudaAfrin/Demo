<section class = "login_form">
  <% if flash[:alert] %>
    <aside>
      <%= flash[:alert] %>
    </aside>
  <%end%>

  <h2>Login Here</h2>

  <%= form_tag do %>
    <div class="field">
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="field">
      <%= label_tag :password, 'Password' %>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions">
      <%= submit_tag "LogIn" %>
    </div>
  <% end %>
</section>